<% include ./../partials/header %>

<h1>Reply to Ticket</h1>

<form class="form-horizontal"  method="post" action="/">
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label" ><b>Name</b></label>
        <div class="col-sm-10">
            <label class="form-control" id="" name="name" required><%= ticket['name']%></label>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label"><b>Email</b></label>
        <div class="col-sm-10">
            <label type="email" class="form-control" id="" name="email" required><%= ticket['email']%></label>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label"><b>Subject</b></label>
        <div class="col-sm-10">
            <label class="form-control" id="" name="subject" required><%= ticket['subject']%></label>
        </div>
    </div>
    <div class="form-group">
    	<label for="inputEmail3" class="col-sm-2" control-label"><b>Message</b></label>
    	<div class="col-sm-10">
    		<label class="form-control" id="" name="message" required><%= ticket['message']%></label>
    	</div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label"><b>Reply</b></label>
        <div class="col-sm-10">
            <textarea class="form-control" id="" rows="4" placeholder="Enter message..." name="reply" required></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Send</button>
        </div>
    </div>
</form>

<% include ./../partials/footer %>